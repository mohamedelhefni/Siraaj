{
  "name": "@siraaj/sdk",
  "version": "2.0.0",
  "description": "Lightweight analytics SDK - Simple, fast, and easy to share",
  "main": "analytics.js",
  "module": "dist/analytics.esm.js",
  "types": "dist/analytics.d.ts",
  "exports": {
    ".": {
      "import": "./dist/analytics.esm.js",
      "require": "./analytics.js",
      "types": "./dist/analytics.d.ts"
    }
  },
  "files": [
    "analytics.js",
    "analytics.min.js",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run clean && rollup -c rollup.config.js",
    "clean": "rm -rf dist analytics.js analytics.min.js",
    "dev": "rollup -c rollup.config.js -w",
    "typecheck": "tsc --noEmit",
    "size": "size-limit"
  },
  "keywords": [
    "analytics",
    "tracking",
    "javascript",
    "typescript",
    "cdn",
    "browser",
    "web-analytics"
  ],
  "author": "Mohamed Elhefni <mohamed.elhefni@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/node": "^22.18.12",
    "esbuild": "^0.24.0",
    "rollup": "^4.24.4",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "size-limit": "^11.1.6",
    "terser": "^5.36.0",
    "typescript": "^5.6.3"
  },
  "size-limit": [
    {
      "name": "Core (UMD)",
      "path": "analytics.min.js",
      "limit": "5 KB"
    },
    {
      "name": "Core (ESM)",
      "path": "dist/analytics.esm.js",
      "limit": "5 KB"
    }
  ]
}